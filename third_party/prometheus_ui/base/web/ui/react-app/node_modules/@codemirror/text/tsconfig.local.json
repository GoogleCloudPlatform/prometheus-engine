{
  "compilerOptions": {
    "lib": ["es6", "dom", "scripthost"],
    "types": ["mocha"],
    "stripInternal": true,
    "noUnusedLocals": true,
    "strict": true,
    "target": "es6",
    "module": "es2020",
    "newLine": "lf",
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "paths": {
      "@codemirror/text": ["./src/index.ts"]
    }
  },
  "include": ["src/*.ts", "test/*.ts"]
}
